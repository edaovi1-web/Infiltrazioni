<body>

    <div id="loader">Sync...</div>

    <div class="header" style="text-align: center; margin-bottom: 20px;">
        <h1 style="margin: 0;">Report Infiltrazioni Officina</h1>
        <small>Versione 6.0 - Pulita</small>
    </div>

    <div class="stats-container">
        <div class="stat-card"><h4>Totale</h4><p id="stat-total">0</p></div>
        <div class="stat-card" style="color: var(--danger)"><h4>Attive</h4><p id="stat-active">0</p></div>
        <div class="stat-card" style="color: var(--success)"><h4>Risolte</h4><p id="stat-resolved">0</p></div>
    </div>

    <div id="map-outer">
        <div id="map-container">
            <img src="https://lh3.googleusercontent.com/d/1eIR9u1TcUldXQEVNcL1Kf2sMMOlA1z4k" id="map-image" alt="Mappa">
            <div id="pins-overlay"></div>
            
            <div id="map-popover" class="popover">
                <h4 style="margin:0 0 10px 0">Nuova Segnalazione</h4>
                <textarea id="desc-input" rows="3" placeholder="Descrizione..."></textarea>
                <div style="display:flex; justify-content: flex-end; gap: 5px;">
                    <button class="btn" style="background:#eee" onclick="closePopover('map-popover')">X</button>
                    <button class="btn btn-primary" onclick="savePin()">Salva</button>
                </div>
            </div>
        </div>
    </div>

    <div class="table-container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
            <h3>Registro Interventi</h3>
            <button class="btn btn-primary no-print" onclick="window.print()">Stampa Report</button>
        </div>
        <table>
            <thead><tr><th>N°</th><th>Data</th><th>Descrizione</th><th>Stato</th><th class="no-print">Azioni</th></tr></thead>
            <tbody id="infiltrations-list"></tbody>
        </table>
    </div>

    <div id="delete-popover" class="popover" style="width: 180px;">
        <p>Eliminare?</p>
        <button class="btn btn-primary" style="background:var(--danger)" id="confirm-delete-btn">Sì</button>
        <button class="btn" onclick="closePopover('delete-popover')">No</button>
    </div>

    <script>
        // --- INCOLLA QUI L'URL DEL TUO DEPLOYMENT DI GOOGLE APPS SCRIPT ---
        const WEB_APP_URL = 'https://script.google.com/macros/s/AKfycbz9y_6YPt5XRkAP-Mt8Of90KPa_fPVRN-HkqmUEjqTLkeTIPtt3O0q_veU0r7LxI2o_TQ/exec';

        let points = [];
        let tempCoords = null;

        async function loadData() {
            showLoader(true);
            try {
                const response = await fetch(WEB_APP_URL + "?getJson=1");
                points = await response.json();
                renderUI();
            } catch (e) { console.error(e); }
            showLoader(false);
        }

        async function syncToCloud() {
            showLoader(true);
            try {
                // Usiamo JSONP-like o fetch con no-cors per il salvataggio
                await fetch(WEB_APP_URL, {
                    method: 'POST',
                    mode: 'no-cors',
                    cache: 'no-cache',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'saveAll', data: points })
                });
                // Poiché no-cors non restituisce la risposta, ricarichiamo i dati dopo un piccolo delay
                setTimeout(loadData, 1000);
            } catch (e) { console.error(e); }
        }

        function renderUI() {
            const overlay = document.getElementById('pins-overlay');
            const list = document.getElementById('infiltrations-list');
            overlay.innerHTML = ''; list.innerHTML = '';
            let stats = { active: 0, resolved: 0 };

            points.forEach((p, i) => {
                const isResolved = p.status === 'resolved';
                if(isResolved) stats.resolved++; else stats.active++;
                
                const pin = document.createElement('div');
                pin.className = `pin ${p.status}`;
                pin.style.left = p.x + '%'; pin.style.top = p.y + '%';
                pin.innerHTML = i + 1;
                pin.onclick = (e) => { e.stopPropagation(); toggleStatus(p.id); };
                overlay.appendChild(pin);

                list.innerHTML += `<tr>
                    <td>${i + 1}</td>
                    <td>${p.date || '-'}</td>
                    <td>${p.desc}</td>
                    <td style="color:${isResolved ? 'var(--success)' : 'var(--danger)'}"><b>${isResolved ? 'RISOLTO' : 'ATTIVA'}</b></td>
                    <td class="no-print">
                        <button class="btn btn-primary" onclick="toggleStatus(${p.id})">Stato</button>
                        <button class="btn btn-danger" onclick="confirmDelete(this, ${p.id})">Elimina</button>
                    </td>
                </tr>`;
            });
            document.getElementById('stat-total').innerText = points.length;
            document.getElementById('stat-active').innerText = stats.active;
            document.getElementById('stat-resolved').innerText = stats.resolved;
        }

        document.getElementById('map-container').addEventListener('click', (e) => {
            if(e.target.id !== 'map-image' && e.target.id !== 'pins-overlay') return;
            const rect = e.currentTarget.getBoundingClientRect();
            tempCoords = { x: ((e.clientX - rect.left) / rect.width) * 100, y: ((e.clientY - rect.top) / rect.height) * 100 };
            const pop = document.getElementById('map-popover');
            pop.style.display = 'block';
            pop.style.left = (tempCoords.x > 80 ? tempCoords.x - 20 : tempCoords.x) + '%';
            pop.style.top = tempCoords.y + '%';
        });

        function savePin() {
            const desc = document.getElementById('desc-input').value;
            if(!desc) return;
            const d = new Date();
            points.push({ id: Date.now(), date: d.toLocaleDateString('it-IT'), x: tempCoords.x, y: tempCoords.y, desc: desc, status: 'active' });
            document.getElementById('desc-input').value = '';
            closePopover('map-popover');
            renderUI();
            syncToCloud();
        }

        function toggleStatus(id) {
            const idx = points.findIndex(p => p.id == id);
            points[idx].status = points[idx].status === 'active' ? 'resolved' : 'active';
            renderUI();
            syncToCloud();
        }

        function confirmDelete(btn, id) {
            const pop = document.getElementById('delete-popover');
            const rect = btn.getBoundingClientRect();
            pop.style.display = 'block'; pop.style.position = 'fixed';
            pop.style.top = (rect.top - 60) + 'px'; pop.style.left = (rect.left - 50) + 'px';
            document.getElementById('confirm-delete-btn').onclick = () => {
                points = points.filter(p => p.id != id);
                closePopover('delete-popover');
                renderUI();
                syncToCloud();
            };
        }

        function closePopover(id) { document.getElementById(id).style.display = 'none'; }
        function showLoader(s) { document.getElementById('loader').style.display = s ? 'block' : 'none'; }
        window.onload = loadData;
    </script>
</body>
</html>
